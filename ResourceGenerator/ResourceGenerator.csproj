<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
 	  <TargetFrameworks>net471;netcoreapp2.0</TargetFrameworks>
	  <WarningsAsErrors>NU1605</WarningsAsErrors>
	  <NoWarn>1701;1702;1705;CS8002</NoWarn>
	  <OutputType>Exe</OutputType>
	  <StartupObject>ResourceGenerator.Program</StartupObject>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net471|AnyCPU'">
	  <PlatformTarget>AnyCPU</PlatformTarget>
	  <OutputPath>bin\Debug\</OutputPath>
	  <DefineConstants>TRACE;DEBUG</DefineConstants>
	</PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ORM-Monitor" Version="2.3.1" />
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-beta0002" />
    <ProjectReference Include="..\HearthDb\HearthDb\HearthDb.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Paths.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Paths.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Paths.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Paths.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>