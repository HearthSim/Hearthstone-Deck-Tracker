<UserControl x:Class="Hearthstone_Deck_Tracker.Controls.Overlay.Battlegrounds.MinionPinning.BattlegroundsMinionPinning"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hearthstone_Deck_Tracker.Controls.Overlay.Battlegrounds.MinionPinning"
             xmlns:extensions="clr-namespace:Hearthstone_Deck_Tracker.Utility.Extensions"
             xmlns:minions="clr-namespace:Hearthstone_Deck_Tracker.Controls.Overlay.Battlegrounds.Minions"
             xmlns:battlegrounds="clr-namespace:Hearthstone_Deck_Tracker.Controls.Overlay.Battlegrounds"
             xmlns:tier7="clr-namespace:Hearthstone_Deck_Tracker.Controls.Overlay.Battlegrounds.Tier7"
             xmlns:hearthstoneDeckTracker="clr-namespace:Hearthstone_Deck_Tracker"
             xmlns:commands="clr-namespace:Hearthstone_Deck_Tracker.Commands"
             xmlns:utility="clr-namespace:Hearthstone_Deck_Tracker.Utility"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="700"
             d:DataContext="{d:DesignInstance local:BattlegroundsMinionPinningViewModel}"
             >
    <UserControl.LayoutTransform>
        <ScaleTransform ScaleX="{Binding Scaling}" ScaleY="{Binding Scaling}" />
    </UserControl.LayoutTransform>
    <UserControl.Resources>
        <utility:ConfigWrapper x:Key="ConfigWrapper"/>
        <CubicEase x:Key="Ease" EasingMode="EaseOut"/>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="#141617" />
            <Setter Property="BorderThickness" Value="1,1,1,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Width="55"
                                Height="54.2"
                                BorderBrush="#3f4346"
                        >
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2C3135" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <!-- Tavern Markers Panel -->
        <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.99" extensions:OverlayExtensions.IsOverlayHitTestVisible="True">
            <Grid>
                <Border HorizontalAlignment="Right" Background="#23272A" BorderBrush="#3f4346" BorderThickness="1" CornerRadius="3,0,0,0" Margin="0,0,0,53" Width="249" MouseEnter="Panel_MouseEnter"
                        MouseLeave="Panel_MouseLeave">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Vertical" x:Name="MainContentGrid">
                        <Border BorderBrush="#4A5256" BorderThickness="0,0,0,1" CornerRadius="3,0,0,0" Background="#1C2022" VerticalAlignment="Center" Padding="8,0,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <tier7:Tier7Logo Width="14" Height="14"  VerticalAlignment="Center" />
                                    <hearthstoneDeckTracker:HearthstoneTextBlock Text="{lex:Loc BattlegroundsTavernPinning_Title}" FontSize="11" HorizontalAlignment="Center" Margin="6,6, 0, 6"/>
                                </StackPanel>
                                <Grid HorizontalAlignment="Right">
                                    <!-- Tier 7 Feature "Badge" (visible when on trial) -->
                                    <Border
                                        Padding="4,2"
                                        Margin="4"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsOnTrial, RelativeSource={RelativeSource AncestorType=local:BattlegroundsMinionPinning}}" Value="True"/>
                                                            <Condition Binding="{Binding CogBtnVisibility, RelativeSource={RelativeSource AncestorType=local:BattlegroundsMinionPinning}}" Value="Hidden"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{lex:Loc BattlegroundsTavernPinning_Tier7Tag}" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource Tier7Orange}" Margin="0,-1,0,0"/>
                                    </Border>

                                    <!-- Buttons StackPanel -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Visibility="{Binding CogBtnVisibility, RelativeSource={RelativeSource AncestorType=local:BattlegroundsMinionPinning}}">
                                        <Border
                                            Name="BtnHelp"
                                            Height="18"
                                            Width="18"
                                            CornerRadius="3"
                                            Background="Transparent"
                                            Cursor="Hand"
                                            MouseEnter="BtnHelp_MouseEnter"
                                            MouseLeave="BtnHelp_MouseLeave"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Margin="4"
                                        >
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" Command="{x:Null}"/>
                                            </Border.InputBindings>
                                            <Rectangle
                                                Height="14"
                                                Width="12"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                MouseLeftButtonDown="BtnHelp_Click"
                                            >
                                                <Rectangle.Fill>
                                                    <VisualBrush Visual="{StaticResource appbar_question}" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                        </Border>
                                        <Border
                                            Name="BtnOptions"
                                            Height="18"
                                            Width="18"
                                            CornerRadius="3"
                                            Background="Transparent"
                                            Cursor="Hand"
                                            MouseEnter="BtnOptions_MouseEnter"
                                            MouseLeave="BtnOptions_MouseLeave"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Margin="4"
                                        >
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" Command="commands:GlobalCommands.ShowSettings" CommandParameter="Battlegrounds" />
                                            </Border.InputBindings>
                                            <Rectangle
                                                Height="14"
                                                Width="14"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                            >
                                                <Rectangle.Fill>
                                                    <VisualBrush Visual="{StaticResource appbar_settings}" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                        <Border Padding="8,8,8,4">
                            <StackPanel>
                                <Border
                                        Background="#141617"
                                        CornerRadius="3"
                                        Padding="8"
                                        Margin="0,0,0,8"
                                        Visibility="{Binding QuickGuideVisibility, RelativeSource={RelativeSource AncestorType=local:BattlegroundsMinionPinning}}">
                                    <DockPanel LastChildFill="False">
                                        <StackPanel DockPanel.Dock="Top">
                                            <hearthstoneDeckTracker:HearthstoneTextBlock
                                                Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide}"
                                                FontSize="13"
                                                FontWeight="Bold"
                                                Margin="0,0,0,8"/>
                                            <TextBlock
                                                Text="{lex:Loc BattlegroundsTavernPinning_QuickGuideExplain}"
                                                FontSize="11"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Opacity="1"
                                                TextWrapping="Wrap"
                                                Margin="0,0,0,4"/>
                                            <Separator Margin="0,8" Height="3" Background="#4A5256" SnapsToDevicePixels="True"/>
                                            <TextBlock
                                                Text="{lex:Loc BattlegroundsTavernPinning_QuickGuideTavern}"
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Opacity="1"
                                                TextWrapping="Wrap"
                                                Margin="0,0,0,4"/>

                                            <Border BorderBrush="#3f4346" BorderThickness="1" CornerRadius="3"
                                                    HorizontalAlignment="Center" VerticalAlignment="Top" Height="121">
                                                <Border.Resources>
                                                    <ImageBrush x:Key="ImageBrush"
                                                                ImageSource="/HearthstoneDeckTracker;component/Resources/Tier7/minion-example.png"
                                                                Stretch="Uniform"/>
                                                </Border.Resources>
                                                <Grid HorizontalAlignment="Center">
                                                    <Image Source="/HearthstoneDeckTracker;component/Resources/Tier7/minion-example.png"
                                                           Stretch="Uniform" Visibility="Hidden"/>
                                                    <Rectangle RadiusX="2" RadiusY="2" Fill="{StaticResource ImageBrush}"/>
                                                    <hearthstoneDeckTracker:HearthstoneTextBlock
                                                        Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide_ImageManual}"
                                                        FontSize="12"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Margin="80,22,0,0" />
                                                    <hearthstoneDeckTracker:HearthstoneTextBlock
                                                        Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide_ImageTribe}"
                                                        FontSize="12"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Left"
                                                        Margin="87,41,0,0" />
                                                    <hearthstoneDeckTracker:HearthstoneTextBlock
                                                        Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide_ImageKeyPiece}"
                                                        FontSize="12"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Left"
                                                        Margin="89,61,0,0" />
                                                </Grid>
                                            </Border>
                                            <Separator Margin="0,8" Height="3" Background="#4A5256" SnapsToDevicePixels="True"/>
                                            <TextBlock
                                                Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide_Pin}"
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Opacity="1"
                                                TextWrapping="Wrap"
                                                Margin="0,0,0,4"/>
                                            <TextBlock
                                                Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide_Browser}"
                                                FontSize="11"
                                                Foreground="White"
                                                Opacity="0.8"
                                                TextWrapping="Wrap"
                                                Margin="0,0,0,0"/>
                                            <Border BorderBrush="#3f4346" BorderThickness="1" CornerRadius="3"
                                                    HorizontalAlignment="Center" VerticalAlignment="Top"
                                                    Margin="0,4,0,8" Height="123">
                                                <Border.Resources>
                                                    <ImageBrush x:Key="ImageBrush"
                                                                ImageSource="/HearthstoneDeckTracker;component/Resources/Tier7/browser-pin-example.png"
                                                                Stretch="Uniform"/>
                                                </Border.Resources>
                                                <Grid>
                                                    <Image Source="/HearthstoneDeckTracker;component/Resources/Tier7/browser-pin-example.png"
                                                           Stretch="Uniform" Visibility="Hidden"/>
                                                    <Rectangle RadiusX="2" RadiusY="2" Fill="{StaticResource ImageBrush}"/>
                                                </Grid>
                                            </Border>
                                            <TextBlock
                                                Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide_Comp}"
                                                FontSize="11"
                                                Foreground="White"
                                                Opacity="0.8"
                                                TextWrapping="Wrap"
                                                Margin="0,0,0,0"/>
                                            <Border BorderBrush="#3f4346" BorderThickness="1" CornerRadius="3"
                                                    HorizontalAlignment="Center" VerticalAlignment="Top"
                                                    Margin="0,4,0,8" Height="108">
                                                <Border.Resources>
                                                    <ImageBrush x:Key="ImageBrush"
                                                                ImageSource="/HearthstoneDeckTracker;component/Resources/Tier7/comp-pin-example.png"
                                                                Stretch="Uniform"/>
                                                </Border.Resources>
                                                <Grid>
                                                    <Image Source="/HearthstoneDeckTracker;component/Resources/Tier7/comp-pin-example.png"
                                                           Stretch="Uniform" Visibility="Hidden"/>
                                                    <Rectangle RadiusX="2" RadiusY="2" Fill="{StaticResource ImageBrush}"/>
                                                </Grid>
                                            </Border>
                                            <TextBlock
                                                Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide_Tribe}"
                                                FontSize="11"
                                                Foreground="White"
                                                Opacity="0.8"
                                                TextWrapping="Wrap"
                                                Margin="0,0,0,0"/>

                                        </StackPanel>
                                        <Button
                                            DockPanel.Dock="Bottom"
                                            Content="{lex:Loc BattlegroundsTavernPinning_GotIt}"
                                            Click="BtnGotIt_Click"
                                            HorizontalAlignment="Right"
                                            Padding="16,6"
                                            Margin="0,16,0,0"
                                            Background="#4A5256"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="11">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        Background="{TemplateBinding Background}"
                                                                        CornerRadius="3"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#5A6266"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DockPanel>
                                </Border>
                                <Border Background="#2E3235" CornerRadius="3" Padding="4" Margin="0,0,0,4">
                                    <ItemsControl  ItemsSource="{Binding MinionTypeButtons}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel ItemWidth="42" ItemHeight="40" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <minions:BattlegroundsMinionTypeButton
                                                    MinionType="{Binding MinionType}"
                                                    Active="{Binding Active}"
                                                    Available="{Binding Available}"
                                                    Faded="{Binding Faded}"
                                                    Width="{Binding Size}"
                                                    Height="{Binding Size}"
                                                    ClickMinionTypeCommand="{Binding DataContext.SetActiveMinionTypeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                                <Grid>
                                    <ItemsControl ItemsSource="{Binding PinnedSlots}" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="5" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Margin" Value="2,4,2,4"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type local:PinnedSlotViewModel}">
                                            <Border Cursor="Hand" CornerRadius="3" Background="#1e2124" Width="42" Height="42" ClipToBounds="False">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="BorderBrush" Value="#141617"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsClearButton}" Value="True">
                                                                <Setter Property="Background" Value="#2E3235"/>
                                                            </DataTrigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick" Command="{Binding UnpinCommand}" />
                                                </Border.InputBindings>
                                                <Grid>
                                                    <!-- Regular card display -->
                                                    <Grid>
                                                        <Grid.Style>
                                                            <Style TargetType="Grid">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsClearButton}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                        <Border Name="CellBorder" CornerRadius="3" BorderBrush="#141617" Background="#1e2124" Width="42" Height="42"/>
                                                        <Grid Width="42" Height="42" Margin="1" ClipToBounds="True">
                                                            <Grid.OpacityMask>
                                                                <VisualBrush Visual="{Binding ElementName=CellBorder}" />
                                                            </Grid.OpacityMask>
                                                            <Border ClipToBounds="True" CornerRadius="2">
                                                                <Image Source="{Binding CardAsset.Asset}"
                                                                       Stretch="UniformToFill"
                                                                       Width="80" Height="80"
                                                                       VerticalAlignment="Top"
                                                                       HorizontalAlignment="Center"
                                                                       Margin="0,-10,0,0" />
                                                            </Border>
                                                        </Grid>
                                                        <Viewbox Width="21" Height="21" Margin="0,-8,0,0" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="5">
                                                            <Viewbox.Style>
                                                                <Style TargetType="Viewbox">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HasCard}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Viewbox.Style>
                                                            <battlegrounds:BattlegroundsTier Tier="{Binding Tier}" Opacity="0.95"/>
                                                        </Viewbox>

                                                        <Border Width="42" Height="42"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Panel.ZIndex="10"
                                                                IsHitTestVisible="False">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <MultiDataTrigger>
                                                                            <MultiDataTrigger.Conditions>
                                                                                <Condition Binding="{Binding HasCard}" Value="True"/>
                                                                                <Condition Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Border}}, Path=IsMouseOver}" Value="True"/>
                                                                            </MultiDataTrigger.Conditions>
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </MultiDataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <Image Source="/HearthstoneDeckTracker;component/Resources/tier-x.png"
                                                                   RenderOptions.BitmapScalingMode="Fant"
                                                                   Width="42" Height="42"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                                        </Border>
                                                    </Grid>

                                                    <!-- Clear all button display -->
                                                    <Grid  Opacity="0.8">
                                                        <Grid.Style>
                                                            <Style TargetType="Grid">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsClearButton}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                        <Image Source="/HearthstoneDeckTracker;component/Resources/tier-x.png"
                                                               RenderOptions.BitmapScalingMode="Fant"
                                                               Width="28" Height="28"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                              />
                                                        <Viewbox Margin="4,2" Stretch="Uniform" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                                            <hearthstoneDeckTracker:HearthstoneTextBlock
                                                                Text="{lex:Loc BattlegroundsTavernPinning_Clear}"
                                                                FontSize="10"
                                                                TextAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                            />
                                                        </Viewbox>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="100">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasPins}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <hearthstoneDeckTracker:HearthstoneTextBlock
                                            Opacity="0.75"
                                            Text="{lex:Loc BattlegroundsTavernPinning_NoPins}"
                                            FontSize="11"
                                            HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Button Command="{Binding ToggleRecommendedCommand}"
                        Margin="0,0,248,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        BorderThickness="1,1,0,0"
                        MouseEnter="RecommendComp_MouseEnter"
                        MouseLeave="RecommendComp_MouseLeave"
                        >
                    <Grid>
                        <Grid>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Opacity" Value="0.7"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EnableRecommended}" Value="True">
                                            <Setter Property="Opacity" Value="1" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Image Source="/HearthstoneDeckTracker;component/Resources/key.png" Width="28" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant"/>
                        </Grid>
                        <Border HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,6"
                                CornerRadius="3"
                                Padding="4,1"
                                Opacity="0.8">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#FF5252"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EnableRecommended}" Value="True">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock FontSize="7"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="OFF"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EnableRecommended}" Value="True">
                                                <Setter Property="Text" Value="ON"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </Grid>
                </Button>

                <Button Command="{Binding ToggleExpandCommand}"
                        Margin="0,0,194,0"
                        Width="55" Height="54.2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        >
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                    <Setter Property="Background" Value="#23272A" />
                                    <Setter Property="BorderThickness" Value="1,0,1,0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Grid>
                        <Image Source="/HearthstoneDeckTracker;component/Resources/pin.png" Width="28" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant"/>
                    </Grid>
                </Button>
            </Grid>
        </Border>

        <!-- Comp Guides Marker Section -->
        <Border MouseEnter="RecommendComp_MouseEnter"
                MouseLeave="RecommendComp_MouseLeave"
                Margin="0,0, 257, 54"
                Background="#01000000"
                Width="200"
                extensions:OverlayExtensions.IsOverlayHitTestVisible="True"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCompGuidesMarkerPanelVisible, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel>
                <!-- Comp Guides Marker Expand Panel - Separate overlay to not affect Tavern Markers height -->
                <Grid Margin="0,0,0,8">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsQuickCompGuideVisible, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <StackPanel VerticalAlignment="Top">
                        <Border BorderBrush="#3f4346" Background="#23272A" BorderThickness="1" CornerRadius="3">
                            <StackPanel VerticalAlignment="Top">
                                <Border BorderBrush="#4A5256" BorderThickness="0,0,0,1" CornerRadius="3,3,0,0" Background="#1C2022" VerticalAlignment="Center" Padding="8,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <tier7:Tier7Logo Width="14" Height="14"  VerticalAlignment="Center" />
                                        <hearthstoneDeckTracker:HearthstoneTextBlock Text="{lex:Loc BattlegroundsTavernPinning_KeyPieces_Title}" FontSize="11" HorizontalAlignment="Center" Margin="6,6, 0, 6"/>
                                    </StackPanel>
                                </Border>
                                <Border Padding="8">
                                    <StackPanel>
                                        <Border
                                                Background="#141617"
                                                CornerRadius="3"
                                                Padding="8"
                                                Visibility="{Binding CompGuidesMarkerQuickGuideVisibility, RelativeSource={RelativeSource AncestorType=local:BattlegroundsMinionPinning}}">
                                            <DockPanel LastChildFill="False">
                                                <StackPanel DockPanel.Dock="Top">
                                                    <hearthstoneDeckTracker:HearthstoneTextBlock
                                                        Text="{lex:Loc BattlegroundsTavernPinning_QuickGuide}"
                                                        FontSize="13"
                                                        FontWeight="Bold"
                                                        Margin="0,0,0,6"/>
                                                    <TextBlock
                                                        Text="{lex:Loc BattlegroundsTavernPinning_KeyPieces_Explain}"
                                                        FontSize="11"
                                                        Foreground="White"
                                                        Opacity="0.8"
                                                        TextWrapping="Wrap"
                                                        Margin="0,0,0,0"/>
                                                    <Border BorderBrush="#3f4346" BorderThickness="1" CornerRadius="3"
                                                            HorizontalAlignment="Center" VerticalAlignment="Top"
                                                            Margin="0,12,0,12" Height="181">
                                                        <Border.Resources>
                                                            <ImageBrush x:Key="ImageBrush"
                                                                        ImageSource="/HearthstoneDeckTracker;component/Resources/Tier7/comp-recommendation-example-guide.png"
                                                                        Stretch="Uniform"/>
                                                        </Border.Resources>
                                                        <Grid>
                                                            <Image Source="/HearthstoneDeckTracker;component/Resources/Tier7/comp-recommendation-example-guide.png"
                                                                   Stretch="Uniform" Visibility="Hidden"/>
                                                            <Rectangle RadiusX="2" RadiusY="2" Fill="{StaticResource ImageBrush}"/>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>
                                                <Button
                                                    DockPanel.Dock="Bottom"
                                                    Content="{lex:Loc BattlegroundsTavernPinning_GotIt}"
                                                    Click="BtnCompGuidesMarkerGotIt_Click"
                                                    HorizontalAlignment="Right"
                                                    FontWeight="SemiBold"
                                                    Padding="16,6"
                                                    Margin="0,8,0,0"
                                                    Background="#4A5256"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    FontSize="11">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border x:Name="border"
                                                                                Background="{TemplateBinding Background}"
                                                                                CornerRadius="3"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="border" Property="Background" Value="#5A6266"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DockPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Auto-Enable Popup - Appears when user turns off recommendation -->
                <Grid Margin="0,0,0,8">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAutoEnableMessageVisible, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <StackPanel VerticalAlignment="Top">
                        <Border BorderBrush="#3f4346" Background="#23272A" BorderThickness="1" CornerRadius="3">
                            <StackPanel VerticalAlignment="Top">
                                <Border Padding="8" >
                                    <StackPanel>
                                        <Border  Background="#141617"
                                                 CornerRadius="3"
                                                 Padding="8">
                                            <StackPanel>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    TextAlignment="Center"
                                                    Text="{lex:Loc BattlegroundsTavernPinning_PopupMessage}"
                                                    FontSize="10"
                                                    FontWeight="SemiBold"
                                                    Foreground="White"
                                                    Opacity="0.8"
                                                    TextWrapping="Wrap"
                                                    Margin="0,0,0,8"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button
                                                        Content="NO"
                                                        Click="BtnAutoEnableNo_Click"
                                                        Padding="16,4"
                                                        FontWeight="Bold"
                                                        Margin="0,0,8,0"
                                                        Background="#4A5256"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        FontSize="10">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border x:Name="border"
                                                                                    Background="{TemplateBinding Background}"
                                                                                    CornerRadius="3"
                                                                                    Padding="{TemplateBinding Padding}">
                                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="border" Property="Background" Value="#5A6266"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                    <Button
                                                        Content="YES"
                                                        Click="BtnAutoEnableYes_Click"
                                                        Padding="16,4"
                                                        Background="#CC4CAF50"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        FontSize="10">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border x:Name="border"
                                                                                    Background="{TemplateBinding Background}"
                                                                                    CornerRadius="3"
                                                                                    Padding="{TemplateBinding Padding}">
                                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="border" Property="Background" Value="#5CB860"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                        <TextBlock
                                            Text="{lex:Loc BattlegroundsTavernPinning_PopupDisclaimer}"
                                            FontSize="10"
                                            FontStyle="Italic"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Opacity="0.7"
                                            TextWrapping="Wrap"
                                            Margin="0,12,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
