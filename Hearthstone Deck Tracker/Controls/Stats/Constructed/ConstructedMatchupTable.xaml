                    <DataTemplate>
                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Warrior}" ToolTip="{lex:Loc Warrior}" Width="24" Height="24" />
                    </DataTemplate>
