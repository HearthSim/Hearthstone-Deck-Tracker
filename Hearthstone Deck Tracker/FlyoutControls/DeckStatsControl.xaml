                                                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Warlock}" Width="24" Height="24" />
                                                        </DataTemplate>
                                                    </DataGridTextColumn.HeaderTemplate>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Binding="{Binding Warrior}" MinWidth="47" Width="auto">
                                                    <DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Warrior}" Width="24" Height="24" />
                                                        </DataTemplate>
                                                    </DataGridTextColumn.HeaderTemplate>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                </GroupBox>
                                <GroupBox Name="GroupboxDeckOverview" Header="Overview Deck:  wins - losses"
                              VerticalAlignment="Top"
                              Height="450" Grid.Row="1"
                              PreviewMouseLeftButtonDown="GroupBoxDeckOverview_PreviewMouseLeftButtonDown"
                                    >
                                        <DataGrid IsReadOnly="True" Name="DataGridWinLoss" AutoGenerateColumns="False"
                                      HorizontalAlignment="Left" VerticalAlignment="Top" Height="auto" Width="auto"
                                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False"
                                      CanUserReorderColumns="False" CanUserSortColumns="False"
                                      CanUserResizeColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Ver." Binding="{Binding Version}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Total" Binding="{Binding Total}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Binding="{Binding Druid}" MinWidth="47" Width="auto">
                                                    <DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Druid}" Width="24" Height="24" />
                                                        </DataTemplate>
                                                    </DataGridTextColumn.HeaderTemplate>
                                                    <DataGridTextColumn.ElementStyle>
