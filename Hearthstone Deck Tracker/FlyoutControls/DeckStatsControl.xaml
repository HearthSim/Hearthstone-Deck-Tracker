<UserControl x:Class="Hearthstone_Deck_Tracker.DeckStatsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:Hearthstone_Deck_Tracker"
             xmlns:enums="clr-namespace:Hearthstone_Deck_Tracker.Enums"
             xmlns:utility="clr-namespace:Hearthstone_Deck_Tracker.Utility"
             mc:Ignorable="d"
             d:DesignHeight="600" d:Width="500">
    <UserControl.Resources>
        <enums:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GroupBox Name="GroupboxFilter" Grid.Row="0" Header="Filter">
            <WrapPanel>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Label Content="Mode:" />
                    <ComboBox Name="ComboboxGameMode" VerticalAlignment="Bottom" Width="90"
                              SelectionChanged="ComboboxGameMode_SelectionChanged" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Label Content="Timeframe:" />
                    <ComboBox x:Name="ComboboxTime" SelectedIndex="6" VerticalAlignment="Bottom" Width="90"
                              SelectionChanged="ComboboxTime_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=., Converter={StaticResource EnumDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <TextBox Name="TextboxNoteFilter" controls:TextBoxHelper.Watermark="Note filter" Margin="3"
                         TextChanged="TextBox_TextChanged" Width="120" />
                <StackPanel Name="StackPanelUnassignedFilter" Orientation="Horizontal" Margin="3" Visibility="Collapsed">
                    <Label Content="Games:" />
                    <ComboBox x:Name="ComboboxUnassigned" VerticalAlignment="Bottom" Width="90"
                              SelectionChanged="ComboboxUnassigned_SelectionChanged" ToolTip="Show games with a/no associated deck.">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=., Converter={StaticResource EnumDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </WrapPanel>
        </GroupBox>
        <TabControl Grid.Row="1" Name="TabControlCurrentOverall">
            <TabItem 
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                ScrollViewer.CanContentScroll="True" 
                Name="TabItemDeck" Header="Deck" PreviewMouseDown="TabItemDeck_OnPreviewMouseDown">
                <Grid
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.CanContentScroll="True">
                    <TabControl Name="TabControlDeck" Grid.Row="0" SelectionChanged="TabControlDeck_OnSelectionChanged">
                        <TabItem Header="Stats" Height="41" VerticalAlignment="Bottom">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <GroupBox Name="GroupboxClassOverview" Header="Overview Class:  wins - losses"
                              VerticalAlignment="Top"
                              Height="auto" Grid.Row="0"
                              PreviewMouseLeftButtonDown="GroupboxClassOverview_OnPreviewMouseLeftButtonDown">
                                        <DataGrid IsReadOnly="True" Name="DataGridWinLossClass" AutoGenerateColumns="False"
                                      HorizontalAlignment="Left" VerticalAlignment="Top" Height="auto" Width="auto"
                                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False"
                                      CanUserReorderColumns="False" CanUserSortColumns="False"
                                      CanUserResizeColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Total" Binding="{Binding Total}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Binding="{Binding Druid}" MinWidth="47" Width="auto">
                                                    <DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Druid}" Width="24" Height="24" />
                                                        </DataTemplate>
                                                    </DataGridTextColumn.HeaderTemplate>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Binding="{Binding Hunter}" MinWidth="47" Width="auto">
                                                    <DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Hunter}" Width="24" Height="24" />
                                                        </DataTemplate>
                                                    </DataGridTextColumn.HeaderTemplate>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Binding="{Binding Mage}" MinWidth="47" Width="auto">
                                                    <DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Mage}" Width="24" Height="24" />
                                                        </DataTemplate>
                                                    </DataGridTextColumn.HeaderTemplate>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Binding="{Binding Paladin}" MinWidth="47" Width="auto">
                                                    <DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Paladin}" Width="24" Height="24" />
                                                        </DataTemplate>
                                                    </DataGridTextColumn.HeaderTemplate>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Binding="{Binding Priest}" MinWidth="47" Width="auto">
                                                    <DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                        <Image RenderOptions.BitmapScalingMode="Fant" Source="{x:Static utility:ImageCache.Priest}" Width="24" Height="24" />
                                                        </DataTemplate>
                                                    </DataGridTextColumn.HeaderTemplate>
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Binding="{Binding Rogue}" MinWidth="47" Width="auto">
