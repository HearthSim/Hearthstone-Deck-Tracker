                                    </DockPanel>
                                </GroupBox>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Games">
                            <Grid>
                                <GroupBox Name="GroupBoxOverallGames" Header="Games" Grid.Row="2" Width="auto">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <CheckBox Name="CheckBoxApplyTagFiltersOG"  Content="Apply tag filters" ToolTip="Tags selected in DECKS > SORT / FILTER" Checked="CheckBoxApplyTagFilters_OnChecked" Unchecked="CheckBoxApplyTagFilters_OnUnchecked"/>
                                                <Label Content="Opponent:" Margin="5,0,0,0"/>
                                                <ComboBox x:Name="ComboBoxOpponentClassOG" VerticalAlignment="Bottom" Width="90"
                              SelectionChanged="ComboBoxOpponentClass_SelectionChanged"/>
                                            
                                            <Label Content="Player:" />
                                            <ComboBox x:Name="ComboBoxPlayerClass" VerticalAlignment="Bottom" Width="90"
                              SelectionChanged="ComboBoxPlayerClass_SelectionChanged"/>
                                        </StackPanel>
                                        <DataGrid IsReadOnly="True" Grid.Row="1" Margin="0,5" CanUserAddRows="False"
                                                  Name="DataGridOverallGames"
                                                  AlternationCount="2" AutoGenerateColumns="False"
                                                  CanUserDeleteRows="False"
                                                  CanUserResizeColumns="False" CanUserResizeRows="False"
                                                  MouseDoubleClick="DGridOverall_MouseDoubleClick"
                                                  SelectionChanged="DGridOverall_SelectionChanged">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Rank" Binding="{Binding RankString}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Result" Binding="{Binding ResultString}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="ToolTip" Value="{Binding ResultToolTip}"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTemplateColumn Header="Hero" SortMemberPath="PlayerHero">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Image RenderOptions.BitmapScalingMode="Fant" Source="{Binding PlayerHeroImage}" Height="24"
                                                                   Width="24"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTemplateColumn Header="VS" SortMemberPath="OpponentHero">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Image RenderOptions.BitmapScalingMode="Fant" Source="{Binding OpponentHeroImage}" Height="24"
                                                                   Width="24" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Name" Binding="{Binding OpponentName}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Deck" Binding="{Binding DeckName}" MaxWidth="75">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                            <Setter Property="ToolTip" Value="{Binding DeckName}"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Mode" Binding="{Binding GameMode}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Turns" Binding="{Binding Turns}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Coin" Binding="{Binding GotCoin}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Time" Binding="{Binding Duration}" SortMemberPath="SortableDuration">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Started"
                                                                    Binding="{Binding StartTime, StringFormat={}{0:dd.MMM HH:mm}}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Region" Binding="{Binding RegionString}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Note" Binding="{Binding Note}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <Separator Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Top" />
                                        <StackPanel Margin="0,5,0,5" Grid.Row="3" Orientation="Horizontal">
                                            <Button Name="BtnOverallMoveToOtherDeck" IsEnabled="False"
                                                    Content="Move to other deck" Margin="5,0,0,0"
                                                    Click="BtnOverallMoveToOtherDeck_Click" />
                                            <Button x:Name="BtnOverallDetails" IsEnabled="False"
                                                    Content="Show replay" Margin="5,0,0,0"
                                                    Width="120" VerticalAlignment="Bottom" Click="BtnOverallDetails_Click" />
                                            <Button x:Name="BtnOverallShowOpponentDeck" IsEnabled="False"
                                                    Content="Show Opp. Deck" Margin="5,0,0,0"
                                                    Width="120" VerticalAlignment="Bottom" Click="BtnOverallShowOpponentDeck_Click" />
                                            <Button x:Name="BtnOverallNote" IsEnabled="False" Content="Edit Note"
                                                    Margin="5,0,0,0" Width="75"
                                                    VerticalAlignment="Bottom" Click="BtnOverallEditNote_Click" />
                                            <Button x:Name="BtnOverallEditGame" IsEnabled="False" Content="Edit Game" Margin="5,0,0,0"
                                                    Width="75"
                                                    VerticalAlignment="Bottom" Click="BtnOverallEditGame_Click" />
                                            <Button x:Name="BtnOverallDelete" IsEnabled="False" Content="Delete"
                                                    Margin="5,0,0,0" Width="75"
                                                    VerticalAlignment="Bottom" Click="BtnOverallDelete_Click" />
                                        </StackPanel>

                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</UserControl>
    