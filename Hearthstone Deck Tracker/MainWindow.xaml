<controls:MetroWindow x:Class="Hearthstone_Deck_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Hearthstone_Deck_Tracker"
        Title="Hearthstone Deck Tracker" Height="670" Width="510" MinWidth="510" MaxWidth="510" MinHeight="525" 
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Closing="Window_Closing_1" 
        Icon="Images/HearthstoneDeckTracker.ico" Activated="MetroWindow_Activated" Deactivated="MetroWindow_Deactivated" 
        StateChanged="MetroWindow_StateChanged" Loaded="MetroWindow_Loaded" LocationChanged="MetroWindow_LocationChanged"
        BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1">
    <Grid>
        <TabControl Name="TabControlTracker" Height="auto" Width="auto">
            <TabItem Header="My Decks">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*">
                        </ColumnDefinition>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <controls:Flyout x:Name="FlyoutFilterTags" Header="Filter decks by tag" Position="Right" Width="255" Height="auto" Panel.ZIndex="100" Grid.Column="1">
                        <local:TagControl Width="auto" Height="auto" x:Name="TagControlFilter"/>
                    </controls:Flyout>
                    <controls:Flyout x:Name="FlyoutNotes" Header="Notes" Position="Right" Width="255" Height="auto" Panel.ZIndex="100" Grid.Column="1">
                        <local:DeckNotes Width="auto" Height="auto" x:Name="DeckNotesEditor" Margin="3,0,0,0"></local:DeckNotes>
                    </controls:Flyout>

                    <Grid Grid.Column="1" Margin="-1,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="0">
                            <Button x:Name="BtnNotes" Content="Notes" Margin="0,0,3,0" VerticalAlignment="Top" Width="76" Height="26" Click="BtnNotes_Click" />
                            <Button x:Name="BtnEditDeck" Content="Edit" Margin="3,0,3,0" Width="76" Height="26" Click="BtnEditDeck_Click" />
                            <Button x:Name="BtnDeleteDeck" Content="Delete" HorizontalAlignment="Left" Margin="3,0,0,0" Width="76" Height="26" Click="BtnDeleteDeck_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0" Grid.Row="1">
                            <Button x:Name="BtnExport" Content="Export to HS" Margin="0,0,3,0" Width="117" Height="26" Click="BtnExport_Click" />
                            <Button x:Name="BtnScreenshot" Content="Screenshot Deck" Margin="3,0,0,0" Width="117" Height="26" Click="BtnScreenhot_Click" />
                        </StackPanel>
                        <local:DeckListView x:Name="ListViewDeck" Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Foreground="White" FontWeight="Bold" BorderThickness="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" FontFamily="Arial"  Margin="0,6,0,6" HorizontalAlignment="Center" Width="240" Height="auto">
                            <local:DeckListView.Resources>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="Background" Value="{Binding Background}" />
                                    <Setter Property="Height" Value="35" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="{Binding ColorPlayer}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </local:DeckListView.Resources>
                        </local:DeckListView>
                    </Grid>

                    <Grid Grid.Column="0" Margin="0,0,-1,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="0">
                            <Button x:Name="ButtonNoDeck" Content="Use no Deck" Width="117" Margin="0,0,3,0" Height="26" Click="ButtonNoDeck_Click" />
                            <Button x:Name="BtnFilterTag" Content="Filter by Tag"  Width="117" Margin="3,0,0,0" Height="26" Click="BtnFilterTag_Click" />
                        </StackPanel>
                        <local:DeckPicker x:Name="DeckPickerList" HorizontalAlignment="Center" Margin="0,6,0,6" Height="auto" Width="240" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"/>
                    </Grid>


                </Grid>
            </TabItem>
            <TabItem Name="TabItemNewDeck" Header="New Deck">
                <Grid AllowDrop="True" Drop="Grid_Drop">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <controls:Flyout x:Name="FlyoutSetTags" Header="Set tags" Position="Right" Width="255" Height="auto" Panel.ZIndex="100" Grid.Column="1">
                        <local:TagControl Width="auto" Height="auto" x:Name="TagControlSet" />
                    </controls:Flyout>
                    <Grid Grid.Column="0" Margin="0,0,-1,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="0" Width="240">
                            <ComboBox x:Name="ComboBoxSelectClass"  HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0" VerticalAlignment="Top" Width="135" SelectedIndex="0" SelectionChanged="ComboBoxFilterClass_SelectionChanged">
                                <system:String>Select a Class</system:String>
                                <system:String>Druid</system:String>
                                <system:String>Hunter</system:String>
                                <system:String>Mage</system:String>
                                <system:String>Paladin</system:String>
                                <system:String>Priest</system:String>
                                <system:String>Rogue</system:String>
                                <system:String>Shaman</system:String>
                                <system:String>Warlock</system:String>
                                <system:String>Warrior</system:String>
                            </ComboBox>
                            <Button Name="BtnSetTag" Content="Edit Tags" HorizontalAlignment="Left" Margin="3,0,0,0" VerticalAlignment="Top" Width="99" Click="BtnSetTag_Click" Height="26"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0" Grid.Row="1" Width="240">
                            <TextBox controls:TextboxHelper.Watermark="Deckname" x:Name="TextBoxDeckName"  VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="26" Margin="0,0,3,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="135" />
                            <Button x:Name="BtnSaveDeck" Content="Save" Margin="3,0,0,0" VerticalAlignment="Top" Width="99" Click="BtnSaveDeck_Click" Height="26"/>
                        </StackPanel>
                        <local:DeckListView x:Name="ListViewNewDeck" Background="DimGray" Grid.Row="2" Foreground="White" FontWeight="Bold" BorderThickness="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" FontFamily="Arial" Margin="0,6,0,6" HorizontalAlignment="Center" Width="240" Height="auto" MouseLeftButtonUp="ListViewNewDeck_MouseLeftButtonUp" MouseRightButtonUp="ListViewNewDeck_MouseRightButtonUp">
                            <ListView.Resources>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="FontFamily" Value="/Hearthstone Deck Tracker;component/Resources/#Belwe Bd BT" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="Background" Value="{Binding Background}" />
                                    <Setter Property="Height" Value="35" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                						Value="True">
                                            <Setter Property="Background"
                							Value="{Binding Background}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected"
                						Value="True">
                                            <Setter Property="Background"
                							Value="{Binding Background}" />
                                            <Setter Property="BorderBrush"
                							Value="Blue" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.Resources>
                        </local:DeckListView>
                    </Grid>
                    <Grid Grid.Column="1" Margin="-1,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="0"  Width="240">
                            <Button x:Name="BtnImport" Content="Import"  Margin="0,0,3,0" Width="98" Height="26" Click="BtnImport_OnClick" />
                            <ComboBox Name="ComboboxNeutral" Margin="3,0,0,0" Width="136" SelectedIndex="0" SelectionChanged="ComboboxNeutral_SelectionChanged">
                                <system:String>Class + Neutral</system:String>
                                <system:String>Class Only</system:String>
                                <system:String>Neutral Only</system:String>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0" Grid.Row="1"  Width="240">
                            <TextBox controls:TextboxHelper.Watermark="Search by name" controls:TextboxHelper.ClearTextButton="True" x:Name="TextBoxDBFilter" ToolTip="If the list is down to one card ENTER will add it to the deck (or just doubleclick on any card)" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="26" Margin="0,0,3,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="134" TextChanged="TextBoxDBFilter_TextChanged" KeyDown="TextBoxDBFilter_KeyDown"/>
                            <Label Content="Mana:" Margin="3,0,3,0"/>
                            <ComboBox x:Name="ComboBoxFilterMana" Width="55" SelectedIndex="0" SelectionChanged="ComboBoxFilterMana_SelectionChanged">
                                <system:String>All</system:String>
                                <system:String>0</system:String>
                                <system:String>1</system:String>
                                <system:String>2</system:String>
                                <system:String>3</system:String>
                                <system:String>4</system:String>
                                <system:String>5</system:String>
                                <system:String>6</system:String>
                                <system:String>7</system:String>
                                <system:String>8</system:String>
                                <system:String>9+</system:String>
                            </ComboBox>
                        </StackPanel>
                        <local:DeckListView x:Name="ListViewDB"  Background="DimGray" Foreground="White" FontWeight="Bold" BorderThickness="1" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="True" FontFamily="Arial" Margin="0,6,0,6" Width="240" KeyDown="ListViewDB_KeyDown" MouseLeftButtonUp="ListViewDB_MouseLeftButtonUp" Grid.Row="2">
                            <ListView.Resources>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="FontFamily" Value="/Hearthstone Deck Tracker;component/Resources/#Belwe Bd BT" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="Background" Value="{Binding Background}" />
                                    <Setter Property="Height" Value="35" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                						Value="True">
                                            <Setter Property="Background"
                							Value="{Binding Background}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected"
                						Value="True">
                                            <Setter Property="Background"
                							Value="{Binding Background}" />
                                            <Setter Property="BorderBrush"
                							Value="Blue" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                            </ListView.Resources>
                        </local:DeckListView>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Options">
                <Grid>
                    <TabControl Width="auto">
                        <TabItem Header="General" Background="{x:Null}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" ></RowDefinition>
                                    <RowDefinition Height="*" ></RowDefinition>
                                </Grid.RowDefinitions>
                                <GroupBox Header="Additional Windows" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="234" Height="288" Margin="6,10,2,0">
                                    <Grid>
                                        <CheckBox x:Name="CheckboxWindowsTopmost" Content="Topmost" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Checked="CheckboxWindowsTopmost_Checked" Unchecked="CheckboxWindowsTopmost_Unchecked"/>
                                        <CheckBox x:Name="CheckboxWindowsOpenAutomatically" Content="Show decks in additional windows" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="CheckboxWindowsOpenAutomatically_Checked" Unchecked="CheckboxWindowsOpenAutomatically_Unchecked"/>
                                        <CheckBox x:Name="CheckboxWinTopmostHsForeground" Content="Only if HS in foreground" HorizontalAlignment="Left" Margin="30,56,0,0" VerticalAlignment="Top" Checked="CheckboxWinTopmostHsForeground_Checked" Unchecked="CheckboxWinTopmostHsForeground_Unchecked"/>
                                        <ComboBox x:Name="ComboboxWindowBackground" HorizontalAlignment="Left" Margin="98,169,0,0" VerticalAlignment="Top" Width="110" SelectionChanged="ComboboxWindowBackground_SelectionChanged">
                                            <system:String>Theme</system:String>
                                            <system:String>Light</system:String>
                                            <system:String>Dark</system:String>
                                            <system:String>Custom</system:String>
                                        </ComboBox>
                                        <Label Content="Background:" HorizontalAlignment="Left" Margin="5,168,0,0" VerticalAlignment="Top"/>
                                        <TextBox x:Name="TextboxCustomBackground" HorizontalAlignment="Left" Height="23" HorizontalContentAlignment="Center" Margin="98,200,0,0" TextWrapping="Wrap" Text="#123456" VerticalAlignment="Top" Width="110" TextChanged="TextboxCustomBackground_TextChanged"/>
                                        <Label Content="Custom hex:" HorizontalAlignment="Left" Margin="5,199,0,0" VerticalAlignment="Top"/>
                                        <CheckBox x:Name="CheckboxTimerTopmost" Content="Topmost" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Checked="CheckboxTimerTopmost_Checked" Unchecked="CheckboxTimerTopmost_Unchecked"/>
                                        <CheckBox x:Name="CheckboxTimerWindow" Content="Show timer in additional window" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Checked="CheckboxTimerWindow_Checked" Unchecked="CheckboxTimerWindow_Unchecked"/>
                                        <CheckBox x:Name="CheckboxTimerTopmostHsForeground" Content="Only if HS in foreground" HorizontalAlignment="Left" Margin="30,135,0,0" VerticalAlignment="Top" Checked="CheckboxTimerTopmostHsForeground_Checked" Unchecked="CheckboxTimerTopmostHsForeground_Unchecked"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Overlay" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="240" Width="235" Margin="5,0,0,0">
                                    <Grid>
                                        <CheckBox x:Name="CheckboxHideOverlayInMenu" Content="Hide in menu" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Checked="CheckboxHideOverlayInMenu_Checked" Unchecked="CheckboxHideOverlayInMenu_Unchecked"/>
                                        <CheckBox x:Name="CheckboxHideOverlayInBackground" Content="Hide if HS in background" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Checked="CheckboxHideOverlayInBackground_Checked" Unchecked="CheckboxHideOverlayInBackground_Unchecked"/>
                                        <CheckBox x:Name="CheckboxHideOverlay" Content="Hide (completely)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="CheckboxHideOverlay_Checked" Unchecked="CheckboxHideOverlay_Unchecked"/>
                                        <Slider x:Name="SliderOverlayOpacity" HorizontalAlignment="Left" Margin="72,177,0,0" VerticalAlignment="Top" Width="125" Value="100" ValueChanged="SliderOverlayOpacity_ValueChanged"/>
                                        <Label Content="Opacity:" HorizontalAlignment="Left" Margin="5,172,0,0" VerticalAlignment="Top"/>
                                        <CheckBox x:Name="CheckboxHideDecksInOverlay" Content="Hide decks" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Checked="CheckboxHideDecksInOverlay_Checked" Unchecked="CheckboxHideDecksInOverlay_Unchecked"/>
                                        <CheckBox x:Name="CheckboxHideTimers" Content="Hide timers" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Checked="CheckboxHideTimers_Checked" Unchecked="CheckboxHideTimers_Unchecked" Margin="10,102,0,0"/>
                                        <CheckBox x:Name="CheckboxHideOpponentCardAge" Content="Hide card-age" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Checked="CheckboxHideOpponentCardAge_Checked" Unchecked="CheckboxHideOpponentCardAge_Unchecked"/>
                                        <CheckBox x:Name="CheckboxHideOpponentCardMarks" Content="Hide card-marks" Margin="10,149,0,0" VerticalAlignment="Top" Checked="CheckboxHideOpponentCardMarks_Checked" Unchecked="CheckboxHideOpponentCardMarks_Unchecked" HorizontalAlignment="Left" Width="114"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Other" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="538" Width="235" Margin="10,0,0,0" Grid.RowSpan="2">
                                    <Grid>
                                        <CheckBox x:Name="CheckboxKeepDecksVisible" Content="Don't reset decks after game" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="200" Checked="CheckboxKeepDecksVisible_Checked" Unchecked="CheckboxKeepDecksVisible_Unchecked"/>
                                        <CheckBox x:Name="CheckboxMinimizeTray" Content="Minimize to tray" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="CheckboxMinimizeTray_Checked" Unchecked="CheckboxMinimizeTray_Unchecked" RenderTransformOrigin="1.518,2.778"/>
                                        <CheckBox x:Name="CheckboxDeckDetection" Content="Automatic deck detection" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Checked="CheckboxDeckDetection_Checked" Unchecked="CheckboxDeckDetection_Unchecked"/>
                                        <CheckBox x:Name="CheckboxAutoSelectDeck" Content="Autoselect if 1 possible deck" HorizontalAlignment="Left" Margin="29,79,-11,0" VerticalAlignment="Top" Checked="CheckboxAutoSelectDeck_Checked" Unchecked="CheckboxAutoSelectDeck_Unchecked"/>
                                        <ComboBox x:Name="ComboboxAccent" HorizontalAlignment="Left" Margin="59,184,0,0" VerticalAlignment="Top" Width="110" SelectionChanged="ComboboxAccent_SelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Label Content="{Binding Name}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <ComboBox x:Name="ComboboxTheme" HorizontalAlignment="Left" Margin="59,153,0,0" VerticalAlignment="Top" Width="110" SelectionChanged="ComboboxTheme_SelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Label Content="{Binding Name}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <Label Content="Theme:" HorizontalAlignment="Left" Margin="5,153,0,0" VerticalAlignment="Top"/>
                                        <Label Content="Accent:" HorizontalAlignment="Left" Margin="5,184,0,0" VerticalAlignment="Top"/>
                                        <ComboBox Name="ComboboxLanguages" HorizontalAlignment="Left" Margin="74,217,0,0" VerticalAlignment="Top" Width="95" SelectionChanged="ComboboxLanguages_SelectionChanged"/>
                                        <Label Content="Language:" HorizontalAlignment="Left" Margin="5,217,0,0" VerticalAlignment="Top"/>
                                        <CheckBox x:Name="CheckboxExportName" Content="Set name when exporting to HS" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Checked="CheckboxExportName_Checked" Unchecked="CheckboxExportName_Unchecked"/>
                                        <CheckBox x:Name="CheckboxPrioGolden" Content="Prioritize golden when exporting" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Checked="CheckboxPrioGolden_Checked" Unchecked="CheckboxPrioGolden_Unchecked"/>
                                        <ComboBox x:Name="ComboboxKeyPressGameStart" HorizontalAlignment="Left" Margin="119,268,0,0" VerticalAlignment="Top" Width="90" SelectionChanged="ComboboxKeyPressGameStart_SelectionChanged"/>
                                        <Label Content="Key on game start:" HorizontalAlignment="Left" Margin="5,268,0,0" VerticalAlignment="Top"/>
                                        <ComboBox x:Name="ComboboxKeyPressGameEnd" HorizontalAlignment="Left" Margin="119,299,0,0" VerticalAlignment="Top" Width="90" SelectionChanged="ComboboxKeyPressGameEnd_SelectionChanged"/>
                                        <Label Content="Key on game end:" HorizontalAlignment="Left" Margin="5,299,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Decks" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="22"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <CheckBox x:Name="CheckboxSameScaling" Grid.Column="0" Grid.Row="0" Content="Use same scaling for player/opponent" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" IsChecked="True" Checked="CheckboxSameScaling_Checked" Unchecked="CheckboxSameScaling_Unchecked"/>
                                <GroupBox Header="Player" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Height="280" Width="235">
                                    <Grid>
                                        <CheckBox x:Name="CheckboxHidePlayerCardCounter" Content="Hide card counter" HorizontalAlignment="Left" Margin="31,116,0,0" VerticalAlignment="Top" Unchecked="CheckboxHidePlayerCardCounter_Unchecked" Checked="CheckboxHidePlayerCardCounter_Checked"/>
                                        <CheckBox x:Name="CheckboxHideDrawChances" Content="Hide draw chances" HorizontalAlignment="Left" Margin="31,139,0,0" VerticalAlignment="Top" Unchecked="CheckboxHideDrawChances_Unchecked" Checked="CheckboxHideDrawChances_Checked"/>
                                        <CheckBox x:Name="CheckboxHighlightCardsInHand" Content="Highlight cards in hand" HorizontalAlignment="Left" Margin="31,162,0,0" VerticalAlignment="Top" Checked="CheckboxHighlightCardsInHand_Checked" Unchecked="CheckboxHighlightCardsInHand_Unchecked"/>
                                        <controls:RangeSlider x:Name="RangeSliderPlayer" ToolTip="Range in which the deck is displayed" Margin="10,33,0,0" Orientation="Vertical" Maximum="100" UpperValue="85" LowerValue="15" UpperValueChanged="RangeSliderPlayer_UpperValueChanged" LowerValueChanged="RangeSliderPlayer_LowerValueChanged" MinRange="30" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" CentralThumbDragCompleted="RangeSliderPlayer_CentralThumbDragCompleted" LowerThumbDragCompleted="RangeSliderPlayer_LowerThumbDragCompleted" UpperThumbDragCompleted="RangeSliderPlayer_UpperThumbDragCompleted"/>
                                        <Slider x:Name="SliderPlayer" ToolTip="Horizontal Position of the deck" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" ValueChanged="SliderPlayer_ValueChanged" LargeChange="0.1"/>
                                        <Slider x:Name="SliderOverlayPlayerScaling" HorizontalAlignment="Left" Margin="86,38,0,0" VerticalAlignment="Top" Width="125" Value="100" ValueChanged="SliderOverlayPlayerScaling_ValueChanged"/>
                                        <Label Content="Scaling:" HorizontalAlignment="Left" Margin="31,33,0,0" VerticalAlignment="Top"/>
                                        <Slider x:Name="SliderPlayerOpacity" HorizontalAlignment="Left" Margin="86,64,0,0" VerticalAlignment="Top" Width="125" Value="100" ValueChanged="SliderPlayerOpacity_ValueChanged"/>
                                        <Label Content="Opacity:" HorizontalAlignment="Left" Margin="31,59,0,0" VerticalAlignment="Top"/>
                                        <ComboBox Name="ComboboxTextLocationPlayer" HorizontalAlignment="Left" Margin="86,85,0,0" VerticalAlignment="Top" Width="80" SelectedIndex="1" SelectionChanged="ComboboxTextLocationPlayer_SelectionChanged">
                                            <system:String>Top</system:String>
                                            <system:String>Bottom</system:String>
                                        </ComboBox>
                                        <Label Content="Text:" HorizontalAlignment="Left" Margin="31,85,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Opponent" Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" Height="280" Width="235" HorizontalAlignment="Center">
                                    <Grid>
                                        <CheckBox x:Name="CheckboxHideEnemyCards" Content="Hide cards" HorizontalAlignment="Left" Margin="31,162,0,0" VerticalAlignment="Top" Checked="CheckboxHideEnemyCards_Checked" Unchecked="CheckboxHideEnemyCards_Unchecked"/>
                                        <CheckBox x:Name="CheckboxHideEnemyCardCounter" Content="Hide card counter" HorizontalAlignment="Left" Margin="31,116,0,0" VerticalAlignment="Top" Checked="CheckboxHideEnemyCardCounter_Checked" Unchecked="CheckboxHideEnemyCardCounter_Unchecked"/>
                                        <controls:RangeSlider x:Name="RangeSliderOpponent" ToolTip="Range in which the deck is displayed" Margin="10,33,0,0" Orientation="Vertical" Maximum="100" UpperValue="85" LowerValue="15" UpperValueChanged="RangeSliderOpponent_UpperValueChanged" LowerValueChanged="RangeSliderOpponent_LowerValueChanged" MinRange="30" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" UpperThumbDragCompleted="RangeSliderOpponent_UpperThumbDragCompleted" LowerThumbDragCompleted="RangeSliderOpponent_LowerThumbDragCompleted" CentralThumbDragCompleted="RangeSliderOpponent_CentralThumbDragCompleted"/>
                                        <Slider x:Name="SliderOpponent" ToolTip="Horizontal Position of the deck" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" ValueChanged="SliderOpponent_ValueChanged" LargeChange="0.1"/>
